<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:s="http://www.springframework.org/schema/security" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
          http://www.springframework.org/schema/security
          http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<s:http pattern="/login.jsp*" security="none"/>
	<s:http pattern="/upload.jsp*" security="none"/>
	<s:http pattern="/user/**" security="none"/>
	<s:http pattern="/file/**" security="none"/>
	
	<s:http use-expressions="false">
		<s:intercept-url pattern="/**" access="ROLE_USER" />
		<s:form-login login-page="/login.jsp" default-target-url="/index.jsp" 
			always-use-default-target="true" login-processing-url="/login.action"
			username-parameter="username" password-parameter="password" />
		<s:logout logout-url="/logout.action" delete-cookies="JSESSIONID" />
		<s:session-management invalid-session-url="/invalidSession.jsp" />
	</s:http>

	<s:authentication-manager>
		<s:authentication-provider user-service-ref="userDetailsService"></s:authentication-provider>
	</s:authentication-manager>
	
	<bean id="userDetailsService" class="com.jyl.security.userdetails.MyUserDetailsService">
	</bean>

</beans>